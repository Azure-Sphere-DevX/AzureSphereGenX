{
  "bindings": {
    "cloud_config": [
      {
        "name": "glovebox-demo",
        "enabled": false,
        "properties": {
          "tenant_id": "",
          "id_scope": "",
          "iot_hub_central_endpoints": [
          ]
        }
      }
    ],
    "device_twins": [
      {
        "name": "SetDesiredTemperature",
        "enabled": true,
        "properties": {
          "cloud2device": true,
          "type": "float"
        }
      },
      {
        "name": "SetDesiredCO2AlertLevel",
        "enabled": true,
        "properties": {
          "cloud2device": true,
          "type": "double"
        }
      },
      {
        "name": "ReportTemperature",
        "enabled": true,
        "properties": {
          "type": "float"
        }
      }
    ],
    "direct_methods": [
      {
        "name": "LightOn",
        "enabled": true
      },
      {
        "name": "LightOff",
        "enabled": true
      }
    ],
    "timers": [
      {
        "name": "MeasureTemperature",
        "enabled": true,
        "properties": {
          "period": "{ 5, 0 }",
          "type": "periodic"
        }
      },
      {
        "name": "MeasureCarbonMonoxide",
        "enabled": true,
        "properties": {
          "type": "oneshot",                 
          "autostart": true,
          "period": "{ 5, 0 }"
        }
      },
      {
        "name": "ReportStartTime",
        "enabled": true,
        "properties": {
          "period": "{ 5, 0 }",
          "type": "oneshot",
          "autostart": true
        }
      }
    ],
    "gpio_outputs": [
      {
        "name": "CloudStatusLed",
        "enabled": true,
        "properties": {
          "pin": "NETWORK_CONNECTED_LED",
          "initialState": "GPIO_Value_Low",
          "invertPin": true,
          "period": "{ 5, 0 }"
        }
      },
      {
        "name": "Relay1",
        "enabled": true,
        "properties": {
          "pin": "RELAY",
          "initialState": "GPIO_Value_Low",
          "invertPin": true
        }
      }
    ],
    "gpio_inputs": [
      {
        "name": "ButtonA",
        "enabled": true,
        "properties": {
          "pin": "BUTTON_A",
          "detect": "DX_GPIO_DETECT_BOTH",
          "period": "{ 0, 200000000 }"
        }
      }
    ],
    "custom": [
      {
        "name": "DeferredUpdate",
        "description": "Deferred update framework and a device twin to report status",
        "enabled": true
      },
      {
        "name": "PublishTelemetry",
        "enabled": false,
        "properties": {
          "period": "{ 15,0 }"
        },
        "signature_template": "sig_timer",
        "handler_template": "c_publish_telemetry_handler",
        "include_template": "c_publish_telemetry_include"
      },
      {
        "name": "RestartDevice",
        "description": "Restart device from a direct method",
        "enabled": true
      },
      {
        "name": "DirectMethodLightControl",
        "description": "Turn light/relay on and off from a direct method",
        "enabled": false
      },
      {
        "name": "Watchdog",
        "description": "Watchdog on a 30 second refresh cadence",
        "enabled": true
      },
      {
        "name": "ReportStartup",
        "description": "Report start utc time and software version",
        "enabled": true
      }
    ]
  }
}