{
  "bindings": {
    "cloud_config": [
      {
        "name": "glovebox-demo",
        "enabled": false,
        "properties": {
          "tenant_id": "",
          "id_scope": "",
          "iot_hub_central_endpoints": [
            ""
          ]
        }
      }
    ],
    "device_twins": [
      {
        "name": "DesiredTemperature",
        "enabled": false,
        "properties": {
          "cloud2device": true,
          "type": "float"
        }
      },
      {
        "name": "DesiredCO2AlertLevel",
        "enabled": false,
        "properties": {
          "cloud2device": true,
          "type": "double"
        }
      },
      {
        "name": "ReportedTemperature",
        "enabled": false,
        "properties": {
          "type": "float"
        }
      },
      {
        "name": "DeferredUpdateStatus",
        "enabled": false,
        "properties": {
          "type": "string"
        }
      },
      {
        "name": "DeviceStartUtc",
        "enabled": false,
        "properties": {
          "type": "string"
        }
      },
      {
        "name": "SoftwareVersion",
        "enabled": false,
        "properties": {
          "type": "string"
        }
      }
    ],
    "direct_methods": [
      {
        "name": "LightOn",
        "enabled": false
      },
      {
        "name": "LightOff",
        "enabled": false
      }
    ],
    "timers": [
      {
        "name": "MeasureTemperature",
        "enabled": false,
        "properties": {
          "period": "5, 0",
          "type": "periodic"
        }
      },
      {
        "name": "MeasureCarbonMonoxide",
        "enabled": false,
        "properties": {
          "period": "5, 0",
          "type": "oneshot",
          "start": true
        }
      },
      {
        "name": "ReportStartTime",
        "enabled": false,
        "properties": {
          "period": "5, 0",
          "type": "oneshot",
          "start": true
        }
      }
    ],
    "gpio_outputs": [
      {
        "name": "CloudStatusLed",
        "enabled": false,
        "properties": {
          "pin": "NETWORK_CONNECTED_LED",
          "initialState": "GPIO_Value_Low",
          "invertPin": true,
          "period": "5, 0"
        }
      },
      {
        "name": "Relay1",
        "enabled": false,
        "properties": {
          "pin": "RELAY",
          "initialState": "GPIO_Value_Low",
          "invertPin": true
        }
      }
    ],
    "gpio_inputs": [
      {
        "name": "ButtonA",
        "enabled": false,
        "properties": {
          "pin": "BUTTON_A",
          "detect": "DX_GPIO_DETECT_BOTH",
          "period": "0, 200000000"
        }
      }
    ],
    "custom": [
      {
        "name": "PublishTelemetry",
        "enabled": false,
        "properties": {
          "period": "15,0"
        },
        "signature_template": "sig_timer",
        "handler_template": "c_publish_telemetry_handler",
        "include_template": "c_publish_telemetry_include"
      },
      {
        "name": "RestartDevice",
        "enabled": false,
        "binding_template": "DIRECT_METHOD_BINDING",
        "signature_template": "sig_direct_method",
        "variable_template": "declare_direct_method",
        "handler_template": "c_restart_device_handler",
        "include_template": "c_restart_device_include"
      },
      {
        "name": "DirectMethodLightControl",
        "description": "Direct methods to turn light/relay on and off create a light/relay gpio binding",
        "enabled": false,
        "components": [
          {
            "name": "LightOn",
            "binding_template": "DIRECT_METHOD_BINDING",
            "signature_template": "sig_direct_method",
            "variable_template": "declare_direct_method",
            "handler_template": "c_direct_method_light_on_handler"
          },
          {
            "name": "LightOff",
            "binding_template": "DIRECT_METHOD_BINDING",
            "signature_template": "sig_direct_method",
            "variable_template": "declare_direct_method",
            "handler_template": "c_direct_method_light_off_handler"
          },
          {
            "name": "Light1",
            "binding_template": "GPIO_BINDING",
            "variable_template": "declare_gpio_output",
            "properties": {
              "pin": "RELAY",
              "initialState": "GPIO_Value_High",
              "invertPin": true
            }
          }
        ]
      },
      {
        "name": "Watchdog",
        "description": "Watchdog on a 30 second refresh cadence",
        "enabled": false,
        "properties": {
          "period": "30, 0"
        },
        "binding_template": "TIMER_BINDING",
        "signature_template": "sig_timer",
        "handler_template": "c_watchdog_handler",
        "include_template": "c_watchdog_include"
      },
      {
        "name": "ReportStartupState",
        "description": "Report start utc time and software version",
        "enabled": false,
        "components": [
          {
            "name": "DeviceStartup",
            "binding_template": "TIMER_BINDING",
            "signature_template": "sig_timer",
            "handler_template": "b_device_startup_handler",
            "variable_template": "declare_timer_oneshot"
          },
          {
            "name": "DeviceStartUtc",
            "binding_template": "DEVICE_TWIN_BINDING",
            "variable_template": "declare_device_twin",
            "properties": {
              "type": "string"
            }
          },
          {
            "name": "SoftwareVersion",
            "binding_template": "DEVICE_TWIN_BINDING",
            "variable_template": "declare_device_twin",
            "properties": {
              "type": "string"
            }
          }
        ]
      },
      {
        "name": "DeferredUpdate",
        "description": "Deferred update framework and a device twin to report status",
        "enabled": false,
        "include_template": "a_deferred_update_include",
        "signature_template": "a_deferred_update_signature",
        "components": [
          {
            "name": "DeferredUpdateCalculate",
            "handler_template": "a_deferred_update_calculate_handler"
          },
          {
            "name": "DeferredUpdateNotification",
            "handler_template": "a_deferred_update_notification_handler"
          },
          {
            "name": "DeferredUpdateStatus",
            "binding_template": "DEVICE_TWIN_BINDING",
            "variable_template": "declare_device_twin",
            "properties": {
              "type": "string",
              "cloud2device": false
            }
          }
        ]
      }
    ]
  }
}