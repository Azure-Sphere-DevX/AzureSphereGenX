{
  "bindings": {
    "cloud_config": [
      {
        "name": "glovebox-demo",
        "enabled": false,
        "properties": {
          "tenant_id": "",
          "id_scope": "",
          "iot_hub_central_endpoints": [
            ""
          ]
        }
      }
    ],
    "device_twins": [
      {
        "name": "DesiredTemperature",
        "enabled": false,
        "properties": {
          "cloud2device": true,
          "type": "float"
        }
      },
      {
        "name": "DesiredCO2AlertLevel",
        "enabled": false,
        "properties": {
          "cloud2device": true,
          "type": "double"
        }
      },
      {
        "name": "ReportedTemperature",
        "enabled": false,
        "properties": {
          "type": "float"
        }
      },
      {
        "name": "DeferredUpdateStatus",
        "enabled": false,
        "properties": {
          "type": "string"
        }
      },
      {
        "name": "DeviceStartUtc",
        "enabled": false,
        "properties": {
          "type": "string"
        }
      },
      {
        "name": "SoftwareVersion",
        "enabled": false,
        "properties": {
          "type": "string"
        }
      }
    ],
    "direct_methods": [
      {
        "name": "LightOn",
        "enabled": false
      },
      {
        "name": "LightOff",
        "enabled": false
      }
    ],
    "timers": [
      {
        "name": "MeasureTemperature",
        "enabled": false,
        "properties": {
          "period": "5, 0",
          "type": "periodic"
        }
      },
      {
        "name": "MeasureCarbonMonoxide",
        "enabled": false,
        "properties": {
          "period": "5, 0",
          "type": "oneshot",
          "autostart": true
        }
      },
      {
        "name": "ReportStartTime",
        "enabled": false,
        "properties": {
          "period": "5, 0",
          "type": "oneshot",
          "autostart": true
        }
      }
    ],
    "gpio_outputs": [
      {
        "name": "CloudStatusLed",
        "enabled": false,
        "properties": {
          "pin": "NETWORK_CONNECTED_LED",
          "initialState": "GPIO_Value_Low",
          "invertPin": true,
          "period": "5, 0"
        }
      },
      {
        "name": "Relay1",
        "enabled": false,
        "properties": {
          "pin": "RELAY",
          "initialState": "GPIO_Value_Low",
          "invertPin": true
        }
      }
    ],
    "gpio_inputs": [
      {
        "name": "ButtonA",
        "enabled": false,
        "properties": {
          "pin": "BUTTON_A",
          "detect": "DX_GPIO_DETECT_BOTH",
          "period": "0, 200000000"
        }
      }
    ],
    "custom": [
      {
        "name": "DeferredUpdate",
        "description": "Deferred update framework and a device twin to report status",
        "enabled": true
      },
      {
        "name": "PublishTelemetry",
        "enabled": false,
        "properties": {
          "period": "15,0"
        },
        "signature_template": "sig_timer",
        "handler_template": "c_publish_telemetry_handler",
        "include_template": "c_publish_telemetry_include"
      },
      {
        "name": "RestartDevice",
        "enabled": true
      },
      {
        "name": "DirectMethodLightControl",
        "description": "Direct methods to turn light/relay on and off create a light/relay gpio binding",
        "enabled": true
      },
      {
        "name": "Watchdog",
        "description": "Watchdog on a 30 second refresh cadence",
        "enabled": true
      },
      {
        "name": "ReportStartupState",
        "description": "Report start utc time and software version",
        "enabled": true
      }
    ]
  }
}